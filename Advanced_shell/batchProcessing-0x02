#!/bin/bash
# Script to fetch data for multiple Pokémon and save each to its own JSON file

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
BASE_URL="https://pokeapi.co/api/v2/pokemon"
OUTPUT_DIR="pokemon_data"
ERROR_FILE="errors.txt"

# Create output directory if it doesn't exist
mkdir -p "$OUTPUT_DIR"

# Loop through Pokémon list
for pokemon in "${POKEMON_LIST[@]}"; do
    echo "Fetching data for $pokemon..."

    # Fetch Pokémon data
    STATUS_CODE=$(curl -s -o "$OUTPUT_DIR/$pokemon.json" -w "%{http_code}" "$BASE_URL/$pokemon")

    # Check if request was successful
    if [ "$STATUS_CODE" -eq 200 ]; then
        echo "Saved data to $OUTPUT_DIR/$pokemon.json ✅"
    else
        echo "Error: Failed to retrieve $pokemon (HTTP $STATUS_CODE)" | tee -a "$ERROR_FILE"
        rm -f "$OUTPUT_DIR/$pokemon.json"
    fi

    # Delay to avoid rate-limiting
    sleep 2
done

