#!/bin/bash
# Script to fetch data for multiple Pokémon with retry logic

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
BASE_URL="https://pokeapi.co/api/v2/pokemon"
OUTPUT_DIR="pokemon_data"
ERROR_FILE="errors.txt"

mkdir -p "$OUTPUT_DIR"
: > "$ERROR_FILE" # clear old errors

for p in "${POKEMON_LIST[@]}"; do
    echo "Fetching data for $p..."
    success=false
    
    for attempt in {1..3}; do
        STATUS_CODE=$(curl -s -o "$OUTPUT_DIR/$p.json" -w "%{http_code}" "$BASE_URL/$p")
        
        if [ "$STATUS_CODE" -eq 200 ]; then
            echo "Saved data to $OUTPUT_DIR/$p.json ✅"
            success=true
            break
        else
            echo "Attempt $attempt for $p failed (HTTP $STATUS_CODE)"
            sleep 2
        fi
    done

    if [ "$success" = false ]; then
        echo "Error: Failed to retrieve $p after 3 attempts" >> "$ERROR_FILE"
        rm -f "$OUTPUT_DIR/$p.json"
    fi

    sleep 2
done

