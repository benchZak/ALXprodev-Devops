#!/bin/bash

# Extract fields with jq
name=$(jq -r '.name' data.json | sed 's/^./\u&/')         # Capitalize first letter
height=$(jq -r '.height' data.json)                      # height in decimeters
weight=$(jq -r '.weight' data.json)                      # weight in hectograms
type=$(jq -r '.types[0].type.name' data.json | sed 's/^./\u&/')  # capitalize first letter of first type

# Convert height to meters (decimeters to meters)
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1 / 10}')

# Convert weight to kilograms (hectograms to kilograms)
formatted_weight=$(echo "$weight" | awk '{printf "%d", $1 / 10}')

# Output formatted sentence
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
