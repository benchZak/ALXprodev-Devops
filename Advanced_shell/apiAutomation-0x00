#!/bin/bash
# Script to fetch Pikachu data from the PokÃ©mon API

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > status_code.txt

# Check if request was successful (HTTP 200)
if [ "$(cat status_code.txt)" -ne 200 ]; then
    echo "Error: Failed to retrieve data from $API_URL" >> "$ERROR_FILE"
    rm -f "$OUTPUT_FILE" # remove incomplete file if exists
fi

# Clean up temp file
rm -f status_code.txt

